<div class="col-sm-12 col-lg-4 mb-3">
    <div class="card">
      <%= image_tag 'board_placeholder.png', class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <a href="#">
            <%= recip.title %>
          </a>
        </h4>
        <div class='mr10 float-right'>
          <a href="#">削除</a>
          <a href="#">編集</a>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= icon 'far', 'user' %>
            <%= recip.user.name %>
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= recip.created_at %>
          </li>
        </ul>
        <p class="card-text"><%= recip.content %></p>
      </div>
    </div>
</div>