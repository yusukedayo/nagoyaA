<h1>ログイン画面</h1>
<%= form_with url: login_path, local: true  do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'ログイン', class: 'form-control' %>
  </div>
<% end %>